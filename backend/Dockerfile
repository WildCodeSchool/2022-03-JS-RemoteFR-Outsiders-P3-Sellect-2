# Dockerfile backend
FROM node:16.14

WORKDIR /usr/src/app

ARG DB_HOST=${DB_HOST}
ENV DB_HOST=${DB_HOST}
ARG DB_USER=${DB_USER}
ENV DB_USER=${DB_USER}
ARG DB_PASSWORD=${DB_PASSWORD}
ENV DB_PASSWORD=${DB_PASSWORD}
ARG DB_NAME=${DB_NAME}
ENV DB_NAME=${DB_NAME}
ARG SECRET_JWT=${SECRET_JWT}
ENV SECRET_JWT=${SECRET_JWT}
ARG MAIL_USER=${MAIL_USER}
ENV MAIL_USER=${MAIL_USER}
ARG MAIL_PASS=${MAIL_PASS}
ENV MAIL_PASS=${MAIL_PASS}
ARG MAIL_HOST=${MAIL_HOST}
ENV MAIL_HOST=${MAIL_HOST}

COPY ./backend .

RUN npm install

CMD [ "npm", "start" ]
